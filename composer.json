{
	"name": "tokrist/tframe",
	"description": "Personal (custom built) framework",
	"minimum-stability": "stable",
	"license": "MIT",
	"type": "project",
	"authors": [
		{
			"name": "tokrist",
			"email": "tokrist15@gmail.com"
		}
	],
	"autoload": {
		"psr-4": {
			"tframe\\": "./"
		}
	},
	"require": {
		"php": ">= 8.2",
		"vlucas/phpdotenv": "^5.5",
		"ext-openssl": "*",
		"ext-pdo": "*",
		"phpmailer/phpmailer": "^6.8",
		"almasaeed2010/adminlte": "~3.2",
		"twbs/bootstrap": "v5.3.2",
		"components/font-awesome": "6.4.2"
	},
	"scripts": {
		"post-update-cmd": [
			"del /q .\\public\\web\\assets\\bootstrap",
			"xcopy .\\vendor\\twbs\\bootstrap\\dist\\ .\\public\\web\\assets\\bootstrap\\ /E/C/I/Y",

			"del /q .\\admin\\web\\assets\\bootstrap",
			"xcopy .\\vendor\\twbs\\bootstrap\\dist\\ .\\admin\\web\\assets\\bootstrap\\ /E/C/I/Y",

			"if exist .\\admin\\web\\assets\\adminlte rmdir /s /q .\\admin\\web\\assets\\adminlte",
			"mkdir .\\admin\\web\\assets\\adminlte",
			"copy .\\vendor\\almasaeed2010\\adminlte\\dist\\css\\adminlte.css admin\\web\\assets\\adminlte\\ /Y",
			"copy .\\vendor\\almasaeed2010\\adminlte\\dist\\js\\adminlte.js admin\\web\\assets\\adminlte\\ /Y",

			"if exist .\\admin\\web\\assets\\fontawesome rmdir /s /q .\\admin\\web\\assets\\fontawesome",
			"if exist .\\public\\web\\assets\\fontawesome rmdir /s /q .\\public\\web\\assets\\fontawesome",
			"mkdir .\\admin\\web\\assets\\fontawesome",
			"mkdir .\\public\\web\\assets\\fontawesome",
			"copy .\\vendor\\components\\font-awesome\\css\\all.css public\\web\\assets\\fontawesome\\ /Y",
			"copy .\\vendor\\components\\font-awesome\\css\\all.css admin\\web\\assets\\fontawesome\\ /Y",
			"del /q .\\admin\\web\\assets\\webfonts",
			"del /q .\\public\\web\\assets\\webfonts",
			"xcopy .\\vendor\\components\\font-awesome\\webfonts\\ .\\admin\\web\\assets\\webfonts\\ /E/C/I/Y",
			"xcopy .\\vendor\\components\\font-awesome\\webfonts\\ .\\public\\web\\assets\\webfonts\\ /E/C/I/Y"
		]
	}
}